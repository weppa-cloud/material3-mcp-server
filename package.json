{
  "name": "@weppa-cloud/material3-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for Material 3 design system - provides AI agents with access to components, themes, and design tokens",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "material3-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "dev": "tsx watch src/index.ts",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "material-design",
    "material-3",
    "design-system",
    "ai-tools",
    "claude",
    "cursor",
    "web-components",
    "flutter",
    "react",
    "angular"
  ],
  "author": "weppa-cloud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weppa-cloud/material3-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/weppa-cloud/material3-mcp-server/issues"
  },
  "homepage": "https://github.com/weppa-cloud/material3-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@iconify-json/material-symbols": "^1.2.39",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@typescript-eslint/typescript-estree": "^8.45.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.3.0",
    "flat-cache": "^6.1.14",
    "node-cache": "^5.1.2",
    "p-retry": "^7.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.10.0",
    "@types/node-cache": "^4.1.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
